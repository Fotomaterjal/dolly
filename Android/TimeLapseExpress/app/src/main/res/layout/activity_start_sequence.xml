<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fotomaterjal.timelapseexpress.StartSequenceActivity"
    android:background="@color/Main_app_blue_color">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveLeftButton"
        android:src="@drawable/left_arrow"
        android:background="@color/Button_on_blue_back_color"
        android:layout_above="@+id/moveDownButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveRightButton"
        android:src="@drawable/right_arrow"
        android:background="@color/Button_on_blue_back_color"
        android:layout_alignTop="@+id/moveRightRotateButton"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveUpButton"
        android:src="@drawable/up_arrow"
        android:background="@color/Button_on_blue_back_color"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveDownButton"
        android:src="@drawable/down_arrow"
        android:background="@color/Button_on_blue_back_color"
        android:layout_below="@+id/moveRightButton"
        android:layout_toRightOf="@+id/moveLeftRotateButton"
        android:layout_toEndOf="@+id/moveLeftRotateButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveLeftRotateButton"
        android:src="@drawable/arrow_left_rotate"
        android:background="@color/Button_on_blue_back_color"
        android:layout_alignTop="@+id/moveRightRotateButton"
        android:layout_toLeftOf="@+id/moveUpButton"
        android:layout_toStartOf="@+id/moveUpButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveRightRotateButton"
        android:src="@drawable/arrow_right_rotate"
        android:background="@color/Button_on_blue_back_color"
        android:layout_below="@+id/moveUpButton"
        android:layout_toRightOf="@+id/moveUpButton"
        android:layout_toEndOf="@+id/moveUpButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deus ex motus"
        android:id="@+id/textView5"
        android:layout_marginTop="32dp"
        android:textColor="@color/White_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:phoneNumber="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START TIME-LAPSE"
        android:id="@+id/startButton"
        android:background="@color/Button_on_blue_back_color"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
